@{
    ViewData["Title"] = "ชำระเงิน";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - T Broker</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Prompt" asp-append-version="true">
    <link rel="icon" type="image/png" href="~/image/icon/tbroker.ico" sizes="32x32" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TB.WEBAPP.SUBMITMOTOR.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/utility.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.min.css" integrity="sha256-NWFDlc+2O5YBqGykjREpkSKDMB6yEu5qPecoRrhcsC0=" crossorigin="anonymous">
</head>
<body>
    <content>
        <form id="paymentInstallment" method="POST" asp-controller="" asp-action="" autocomplete="off">
            @Html.AntiForgeryToken()
            <div class="d-flex justify-content-center align-items-center vh-100">
                <div class="card shadow p-4" style="width: 26rem;">
                    <div class="card-body text-center">
                        <div class="row justify-content-center mb-3">
                            <div class="col-auto w-100">
                                <img src="/image/logo-company/tbroker_header.png" class="rounded img-fluid" alt="T Broker Logo" asp-append-version="true" />
                            </div>
                        </div>
                        <h5 class="card-title mb-3">ชำระเงิน</h5>
                        <p class="text-muted">
                            กรุณาตรวจสอบรายละเอียดยอดเงินที่ต้องชำระด้านล่างให้ถูกต้องก่อนดำเนินการชำระเงิน
                            หากมีข้อสงสัยหรือต้องการสอบถามเพิ่มเติม กรุณาติดต่อฝ่ายบริการลูกค้า
                        </p>
                        <span class="mt-2">
                            ขอขอบคุณที่ใช้บริการของเรา
                        </span>
                        <div class="my-3">
                            <span class="form-label">ยอดเงินที่ต้องชำระ</span>
                            <h3 class="text-success">@ViewBag.Amount</h3>
                        </div>
                        <input type="hidden" name="paymentInstallmentHidden" value="@ViewBag.Token" />
                        <button type="button" id="paymentButton" class="btn btn-success w-100">ชำระเงิน</button>
                    </div>
                </div>
            </div>
        </form>
    </content>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.all.min.js" integrity="sha256-WjwoxFTbs4JzyDmrHgK4VgR+Dz7he8HYwCbocAlNn9k=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/1e32186682.js" crossorigin="anonymous"></script>
    <script type="module" src="@Url.Content("~/js/payment/installment/index.js")" asp-append-version="true"></script>
</body>
