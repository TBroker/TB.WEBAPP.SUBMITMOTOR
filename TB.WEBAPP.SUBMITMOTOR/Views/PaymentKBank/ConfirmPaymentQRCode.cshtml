@{
    ViewData["Title"] = "ชำระเงิน";
    Layout = "_LayoutDefault";
}
<content>
    <div class="d-flex justify-content-center align-items-center vh-100 animate__animated animate__fadeInDown">
        <form id="coverNoteForm" method="POST" asp-controller="" asp-action="" autocomplete="off">
            @Html.AntiForgeryToken()
            <input type="hidden" name="coverNoteHidden" value="@ViewBag.TransactionId" />
        </form>
        <div class="col-lg-4 col-sm-6 col-12 card shadow p-4">
            <div class="card-body text-center">
                <div class="row justify-content-center mb-3">
                    <div class="col-auto w-100">
                        <img src="/image/logo-company/tbroker_header.png" class="rounded img-fluid" alt="T Broker Logo" asp-append-version="true" />
                    </div>
                </div>
                <div class="mb-3">
                    <h2 class="card-title mb-3 text-danger">ชำระเงิน</h2>
                    <p class="fs-4 card-text text-success">
                        ชำระเงินสำเร็จ
                    </p>
                    <p>เลขทะเบียนรถ : @ViewBag.VehicleRegNo</p>
                    <p>เลขใบคำขอ (ภาคสมัครใจ) : @ViewBag.ApplicationNoVoluntary</p>
                    @if (!string.IsNullOrEmpty(ViewBag.ApplicationNoCompulsory))
                    {
                        <p>เลขใบคำขอ (ภาคบังคับ) : @ViewBag.ApplicationNoCompulsory</p>
                    }
                    <p>เอกสารยืนยันการรับแจ้งประกันของท่านได้ถูกจัดส่งไปที่ Email : <span class="fw-bolder text-danger">@ViewBag.InsurceEmail</span></p>
                    <p class="fs-6 text-danger">ท่านสามารถตรวจสอบเอกสารยืนยันการรับแจ้งประกันไฟล์ PDF โดยใช้รหัสผ่านเป็น 4 หลักท้าย ของบัตรประชาชน/หนังสือเดินทาง หรือเลขประจำตัวผู้เสียภาษี ตามเงื่อนไขที่ท่านเลือก</p>
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-success" id="voluntaryButton"><i class="fa-solid fa-file-arrow-down"></i> ภาคสมัครใจ</button>
                    @if (!string.IsNullOrEmpty(ViewBag.ApplicationNoCompulsory))
                    {
                        <button type="button" class="btn btn-success" id="compulsoryButton"><i class="fa-solid fa-file-arrow-down"></i> ภาคบังคับ</button>
                    }
                </div>
                <div class="mb-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-100">
                        <i class="fa-solid fa-arrow-left"></i> กลับไปหน้าหลัก
                    </a>
                </div>
            </div>
        </div>
    </div>
</content>

@section Scripts {
    <script type="module" src="@Url.Content("~/js/payment/confirmqrcode/index.js")" asp-append-version="true"></script>
}