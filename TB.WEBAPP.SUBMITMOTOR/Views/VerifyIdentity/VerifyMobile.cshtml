@{
    ViewData["Title"] = "ยืนยันตัวตน";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - T Broker</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Prompt" asp-append-version="true">
    <link rel="icon" type="image/png" href="~/image/icon/tbroker.ico" sizes="32x32" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TB.WEBAPP.SUBMITMOTOR.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/utility.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.min.css" integrity="sha256-NWFDlc+2O5YBqGykjREpkSKDMB6yEu5qPecoRrhcsC0=" crossorigin="anonymous">

</head>
<content>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 26rem;">
            <div class="card-body text-center">
                <div class="row justify-content-center mb-3">
                    <div class="col-auto w-100">
                        <img src="/image/logo-company/tbroker_header.png" class="rounded img-fluid" alt="T Broker Logo" asp-append-version="true" />
                    </div>
                </div>
                <h5 class="card-title mb-3">การยืนยันตัวตน</h5>
                <form id="verifyMobileForm" method="POST" asp-controller="" asp-action="" autocomplete="off">
                    <!-- 1. Select Option ความสัมพันธ์ -->
                    <div class="mb-3">
                        <label for="relationshipSelect" class="form-label">ความสัมพันธ์</label>
                        <select class="form-select form-select-sm" id="relationshipSelect" name="relationshipSelect">
                        </select>
                    </div>

                    <!-- 2. Input เบอร์โทรศัพท์ -->
                    <div class="mb-3">
                        <label for="mobileInput" class="form-label">เบอร์โทรศัพท์</label> <i class="fa-solid fa-star-of-life fa-2xs text-danger"></i>
                        <input type="tel" class="form-control form-control-sm numberOnly" id="mobileInput" name="mobileInput" placeholder="08xxxxxxxx" pattern="0[0-9]{8,9}">
                    </div>                  

                    <button type="button" id="submitMobileButton" class="btn btn-primary w-100">ส่งข้อมูล</button>
                    <input type="hidden" name="verifyMobileHidden" value="@ViewBag.Token" />
                </form>          
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.all.min.js" integrity="sha256-WjwoxFTbs4JzyDmrHgK4VgR+Dz7he8HYwCbocAlNn9k=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/1e32186682.js" crossorigin="anonymous"></script>
    <script type="module" src="@Url.Content("~/js/helper/utility.js")" asp-append-version="true"></script>
    <script type="module" src="@Url.Content("~/js/verify/mobile/index.js")" asp-append-version="true"></script>
</content>