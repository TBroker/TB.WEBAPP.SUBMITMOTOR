@{
    ViewData["Title"] = "ยืนยันตัวตน";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - T Broker</title>

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Prompt" asp-append-version="true">
    <link rel="icon" type="image/png" href="~/image/icon/tbroker.ico" sizes="32x32" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TB.WEBAPP.SUBMITMOTOR.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/utility.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pageloader.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.min.css" integrity="sha256-NWFDlc+2O5YBqGykjREpkSKDMB6yEu5qPecoRrhcsC0=" crossorigin="anonymous">

</head>

<content>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4" style="width: 26rem;">
            <div class="card-body text-center">
                <div class="row justify-content-center mb-3">
                    <div class="col-auto w-100">
                        <img src="/image/logo-company/tbroker_header.png" class="rounded img-fluid" alt="T Broker Logo" asp-append-version="true" />
                    </div>
                </div>

                <h5 class="card-title mb-3">การยืนยันตัวตน</h5>
                <p class="text-muted">
                    กรุณากรอกรหัสยืนยันแบบใช้ครั้งเดียว (OTP) ที่ส่งไปยังหมายเลขโทรศัพท์ของท่าน<br>
                    รหัส OTP จะหมดอายุภายใน 5 นาที เพื่อความปลอดภัยของข้อมูล
                </p>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">รหัสอ้างอิง:</span>
                    <span id="otpReferenceSpan" class="badge bg-secondary fs-6">@ViewBag.OtpRef</span>
                </div>

                <form id="verifyOtpForm" method="POST" asp-controller="" asp-action="" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <input type="text" id="verifyOtpInput" name="verifyOtpInput" class="form-control text-center numberOnly" maxlength="6" pattern="\d{6}" required placeholder="กรอกรหัส OTP 6 หลัก">
                    </div>
                    <div class="mb-2 text-danger" id="countdown">เหลือเวลา: 05:00</div>
                    <button type="button" id="verifyOtpButton" class="btn btn-primary w-100">ยืนยันรหัส OTP</button>
                    <input type="hidden" name="verifyOtpCodeHidden" value="@ViewBag.Token" />
                </form>

                <form id="resendOtpForm" method="POST" asp-controller="" asp-action="" autocomplete="off">
                    @Html.AntiForgeryToken()
                    <div class="mt-3">
                        <small class="text-muted">
                            หากไม่ได้รับรหัสภายใน 1 นาที <button type="button" id="resendOtpButton" disabled class="btn btn-primary btn-sm">คลิกที่นี่เพื่อขอรหัสใหม่</button>
                        </small>
                    </div>   
                    <input type="hidden" name="verifyOtpCodeHidden" value="@ViewBag.Token" />
                </form>

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.22.0/dist/sweetalert2.all.min.js" integrity="sha256-WjwoxFTbs4JzyDmrHgK4VgR+Dz7he8HYwCbocAlNn9k=" crossorigin="anonymous"></script>
    <script type="module" src="@Url.Content("~/js/helper/utility.js")" asp-append-version="true"></script>
    <script type="module" src="@Url.Content("~/js/verify/otp/index.js")" asp-append-version="true"></script>
</content>